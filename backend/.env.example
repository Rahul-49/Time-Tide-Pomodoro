# Copy this file to .env and fill in the values
# The server reads these via dotenv in backend/server.js

# MongoDB connection string
# For MongoDB Atlas, use the SRV string from the Atlas UI (Database -> Connect -> Drivers)
# Example:
# MONGO_URI=mongodb+srv://<username>:<password>@<cluster-host>/<dbName>?retryWrites=true&w=majority&appName=<appName>
# For local MongoDB, you can use:
# MONGO_URI=mongodb://127.0.0.1:27017/timetide
MONGO_URI=

# Optional: timeouts (ms)
# MONGO_SERVER_SELECTION_TIMEOUT_MS=15000
# MONGO_SOCKET_TIMEOUT_MS=45000

# Optional (DEBUG ONLY): relax TLS validation if your environment uses SSL interception
# DO NOT USE THESE IN PRODUCTION
# MONGO_TLS_ALLOW_INVALID_CERT=true
# MONGO_TLS_ALLOW_INVALID_HOSTNAME=true

# Other app configs
#PORT=5000
#OPENWEATHER_API_KEY=your_openweather_api_key
